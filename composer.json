{
    "name": "pradeep3/fortify-ui-tailwindcss",
    "description": "Laravel Fortify tailwind UI",
    "keywords": [
        "fortify-ui"
    ],
    "homepage": "https://github.com/mekpk/fortify-ui-tailwindcss",
    "license": "MIT",
    "authors": [
        {
            "name": "K Pradeep Kumar",
            "email": "pradeep@kpktechnology.com",
            "homepage": "https://twitter.com/me_kpk",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4",
        "illuminate/contracts": "^8.0",
        "zacksmash/fortify-ui": "^1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "orchestra/testbench": "^6.0",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Pradeep3\\FortifyUITailwind\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Pradeep3\\FortifyUITailwind\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit --colors=always",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Pradeep3\\FortifyUITailwind\\FortifyUITailwindServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
